{
  "rules": {
    "boxes": {
      ".read": "auth.uid != null",
      ".write": "auth.uid != null || auth.uid === 'aptitude-box-service-worker'"
    },
    "games": {
      ".read": "auth.uid != null",
      ".write": "auth.uid != null || auth.uid === 'aptitude-box-service-worker'"
    },
    "sessions": {
      ".read": "auth.uid != null",
      ".write": "auth.uid != null"
    },
    "users": {
      "$uid": {
        ".read": "auth.uid === $uid",
        ".write": "auth.uid === $uid"
      }
    }
  }
}